# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://evrp-generator.com,https://www.evrp-generator.com

# Application Limits
MAX_CUSTOMERS=1000
MAX_DEPOTS=100
MAX_CHARGING_STATIONS=500
INSTANCE_GENERATION_TIMEOUT=1800

# Gunicorn Configuration (used in Docker)
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=600
GUNICORN_BIND=0.0.0.0:5000

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
